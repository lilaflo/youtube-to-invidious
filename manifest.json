{
  "manifest_version": 3,
  "name": "YouTube to Invidious",
  "version": "1.0.0",
  "description": "If youtube blocks you, just switch to Invidious",
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-invidious@lilaflo.github.io",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "src/options.html"
}
