{
  "manifest_version": 3,
  "name": "YouTube to Invidious",
  "version": "1.0.0",
  "description": "If youtube blocks you, just switch to Invidious",
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-invidious@lilaflo.github.io"
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "http://localhost:5173/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_end",
      "type": "module"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "src/options.html"
}
